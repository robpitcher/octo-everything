{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "demoplan/**"
        ],
        "src": "../specs",
        "dest": "."
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Contoso PRD Hub",
      "_appTitle": "Contoso PRD Hub",
      "_enableSearch": true,
      "pdf": false
    }
  }
}