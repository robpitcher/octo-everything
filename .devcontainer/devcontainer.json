{
  "name": "Contoso Product Brain",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "8.0"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true
      },
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "bierner.markdown-mermaid",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-renderers",
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "GitHub.vscode-pull-request-github"
      ]
    }
  },
  "postCreateCommand": {
    "python-deps": "pip install pandas matplotlib numpy",
    "dotnet-tools": "dotnet tool install -g docfx && echo 'export PATH=\"$PATH:/home/vscode/.dotnet/tools\"' >> ~/.bashrc"
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:${containerEnv:HOME}/.dotnet/tools"
  },
  "remoteUser": "vscode"
}